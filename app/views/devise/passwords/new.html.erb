<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, validate: true) do |f| %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
  </div>

  <div class="actions">
  	<%= link_to "Log in", new_user_session_path, class: "btn btn-default" %>
    <%= f.submit "Reset Password", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>