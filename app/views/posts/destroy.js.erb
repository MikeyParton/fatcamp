// hide post
post = $("#post-" + <%= @post.id %>);
post.slideUp(400, function(){
	this.remove();
});

// refresh user panel if weight changed
<% if !@post.weight.blank? %>
	$("#user-panel").html("<%= j render partial: 'users/user_panel', locals: { user: @user } %>");
	render_chart();
<% end %>

